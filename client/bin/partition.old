use strict;
use FileHandle;
use Digest::MD5 qw( md5 );
use Getopt::Long;

# set the input record separator
$/ = $ENV{TTRS} if exists $ENV{TTRS};
$/ = eval $/ if $/ =~ /^['"]/;

my ($path, $sig, $R) = splice @ARGV, 0, 3;

my @table;

while(<>){
  my ($key) = split /\t/;
  next unless defined $key;
  my $part = unpack("N", md5 $key) % ($R+1);

  $table[$part] ||=
    new FileHandle ">$path/$part/$sig" 
      or die $!;

  $table[$part]->print($_);
}

for (0..$#table){
  $table[$_]->close if defined $table[$_];
}

